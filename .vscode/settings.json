{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,

    // Core latex/pdflatex auxiliary files
    "**/*.aux": true,
    "**/*.lof": true,
    "**/*.log": true,
    "**/*.lot": true,
    "**/*.fls": true,
    "**/*.out": true,
    "**/*.toc": true,
    "**/*.fmt": true,
    "**/*.fot": true,
    "**/*.cb": true,
    "**/*.cb2": true,
    "**/.lb": true,

    // ## Bibliography auxiliary files (bibtex/biblatex/biber):
    "**/*.bbl": true,
    "**/*.bcf": true,
    "**/*.blg": true,
    "**/*-blx.aux": true,
    "**/*-blx.bib": true,
    "**/*.run.xml": true,

    // ## Build tool auxiliary files:
    "**/*.fdb_latexmk": true,
    "**/*.synctex": true,
    "**/*.synctex(busy)": true,
    "**/*.synctex.gz": true,
    "**/*.synctex.gz(busy)": true,
    "**/*.pdfsync": true,
    "**/*.rubbercache": true,
    "**/rubber.cache": true,
  }
}
